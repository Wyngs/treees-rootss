            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEndDate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:minWidth="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/edit_pick_date"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="24dp"
                app:strokeColor="@color/profile_role_rouge"
                app:strokeWidth="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowPoster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rowEndDate">

            <TextView
                android:id="@+id/tvPosterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_poster"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPosterStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="*"
                android:textColor="@color/profile_role_rouge"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tvPosterLabel"
                app:layout_constraintStart_toEndOf="@id/tvPosterLabel"
