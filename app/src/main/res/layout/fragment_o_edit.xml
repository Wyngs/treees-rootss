        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rowSelectionDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rowPoster">

            <TextView
                android:id="@+id/tvSelectionDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_selection_date"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tilSelectionDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tilSelectionDate" />

            <TextView
                android:id="@+id/tvSelectionDateStar"
